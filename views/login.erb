<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
<script>
      $( function() {
        $("#login").validate();
      } );
</script>
<div class="container">
	<form action="/login" method="post" class="form-signin" id="login">
	  <h2 class="form-signin-heading">Login</h2>
	  <label for="user" class="sr-only">Username</label>
	  <input type="text" id="user" name="username" class="form-control" placeholder="Username" maxlength="40" required>
	  <label for="pas" class="sr-only">Password</label>
	  <input type="password" id="pas" name="password" class="form-control" placeholder="Password" maxlength="40" required>
	  <br>
	  <input class="btn btn-primary" type="submit" value="Submit" role="button">
	  <h5 style="color: red"><%= @err %></h5>
	  <h5>Please use username: "hchien" password: "scu123" for testing</h5>
	</form> 
	
</div>
