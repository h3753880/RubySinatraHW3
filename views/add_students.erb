<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script>
      $( function() {
        $("#stu").validate();

        $( "#datepicker" ).datepicker();
        $( "#datepicker" ).datepicker( "option", "dateFormat", "yy-mm-dd" );
        $( "#datepicker" ).val("1990-01-01");
      } );
</script>
<div class="container">
  <h2>Add A Student</h2>
  <form method="post" action="/addstu" id="stu">
    <div class="form-group">
      <label for="usr">Student ID:</label>
      <input type="number" class="form-control" id="usr" value="<%= @new_id %>" name="id" maxlength="6" required>
    </div>
    <div class="form-group">
      <label for="f">Firstname:</label>
      <input type="text" class="form-control" id="f" name="firstname" maxlength="40" required>
    </div>
    <div class="form-group">
      <label for="l">Lastname:</label>
      <input type="text" class="form-control" id="l" name="lastname" maxlength="40" required>
    </div>
    <div class="form-group">
      <label for="datepicker">Birthday:</label>
      <input type="text" class="form-control" id="datepicker" name="birthday" required>
    </div>
    <div class="form-group">
      <label for="pa">Address:</label>
      <input type="text" class="form-control" id="pa" name="address" maxlength="48" required>
    </div>
    <a class="btn btn-primary" href="/students" role="button"> << Previous </a>
    <input class="btn btn-primary" type="submit" value="Add" role="button">
  </form>
</div>
